<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sqlightnews">
    <uses-permission android:name="android.permission.USE_BIOMETRIC"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SQLightNews">
        <activity
            android:name=".NewsInfoActivity"
            android:exported="true" />
        <activity
            android:name=".UpdateNewsActivity"
            android:exported="true" />
        <activity
            android:name=".AddNewsActivity"
            android:exported="true"
            android:label="Добавление новости" />
        <activity
            android:name=".AllNewsActivityAdministrator"
            android:exported="true"
            android:parentActivityName=".LogInActivity"
            android:label="Все новости (администратор)" />
        <activity
            android:name=".AllNewsActivity"
            android:exported="true"
            android:label="Все новости"
            android:parentActivityName=".LogInActivity" />
        <activity
            android:name=".RegistrationActivity"
            android:exported="true"
            android:label="Регистрация"
            android:parentActivityName=".LogInActivity" />
        <activity
            android:name=".LogInActivity"
            android:exported="true"
            android:label="Вход" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>